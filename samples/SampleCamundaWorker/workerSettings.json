      "ProcessDefinitionIds": null, // İşlem tanımı kimliklerine göre görevleri filtreleyin. Json List
      "ProcessDefinitionKeys": null, // İşlem tanımlama anahtarlarına göre görevleri filtreleyin. (Key = BpmnProcessId) - orn: MUTA. Json List
      "ProcessVariables": null, // İşlem örneği değişken değerlerine dayalı olarak görevleri filtrelemek için kullanılan bir JSON nesnesi. Nesnenin özellik adı, bir işlem değişkeni adını temsil ederken, özellik değeri, görevleri filtrelemek için işlem değişkeni değerini temsil eder.
      "TenantIds": null, // Görevleri kiracı kimliklerine göre filtreleyin.
      "BusinessKey": null, // İşlem örneği iş anahtarına dayalı olarak görevlerin filtrelenmesini sağlayan bir Dize değeri.
      "ProcessDefinitionId": null, // İşlem tanımı kimliğine göre görevleri filtreleyin
      "ProcessDefinitionKey": null, // 	Filter tasks based on process definition key.
      //"ProcessDefinitionVersionTag": null, // İşlem tanımı sürüm etiketine göre görevleri filtreleyin. --- o0o --- bu projede tanimli degil, gerekli ise eklenebilir.
      "WithoutTenantId": false // İşlem tanımı sürüm etiketine göre görevleri filtreleyin.
    },
